{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "lib",
        "declaration": true,
        "declarationDir": "lib/types",
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tests/**/*.test.ts"]
}
